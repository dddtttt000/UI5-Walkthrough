<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.PDFView"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	busyIndicatorDelay="0"
>
  <Page title="PDF View" showNavButton="true" navButtonPress=".onNavBack">
    <FlexBox direction="Column" class="sapUiSmallMargin">
		  <Button  id="pdfViewButton"
        icon="sap-icon://pdf-attachment"
        text="{i18n>pdfViewButtonText}" 
        class="myCustomButton"
        press=".onShowPDF"/>
      <FlexBox direction="Column" width="100%" height="100vh" id="pspdfkit"></FlexBox>
		</FlexBox>
  </Page>
</mvc:View>